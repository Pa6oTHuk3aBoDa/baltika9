#include <iostream>
using namespace std;

int main()
{
    setlocale(0, "");

    cout << "выбор погоды\n\n";

    cout << "[1]Лето\n";
    cout << "[2]Осень\n";
    cout << "[3]Зима\n";
    cout << "[4]Весна\n";

    int season;
    cout << "Выберите погоду: \n";
    cin >> season;

    if (season == 1)
    {
        cout << "Сейчас лето, самое время выйти на улицу и отдохнуть от учебы!";
    }
    else if (season == 2)
    {
        cout << "Сейчас осень, следует одеться тепло и взять с собой зонт!";
    }
    else if (season == 3)
    {
        cout << "Сейчас зима, лучше останьться дома!";
    }
    else if (season == 4)
    {
        cout << "Сейчас весна, можно выйти на улицу и насладиться весенним солнцем!";
    }
    else
    {
        cout << "Такого времени года не существует, сожалею...";
    }

    return 0;
}
