    cout << "[10] Октябрь\n";
    cout << "[11] Ноябрь\n";
    cout << "[12] Декабрь\n\n";
    cout << "Выберите предпочитаемый месяц: ";

    cin >> choice;

    switch (choice)
    {
    case 1:
        cout << "Вы выбрали январь";
